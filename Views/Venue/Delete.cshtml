@model EventEase_Management.Entity.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        h3 {
            color: #dc3545;
            margin-bottom: 20px;
            text-align: center;
        }

        .font-weight-bold {
            font-weight: 600;
        }

        .container {
            max-width: 800px;
            padding: 20px;
        }

        .card {
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn {
            border-radius: 5px;
            padding: 12px 25px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        .text-center {
            text-align: center;
        }

        .img-fluid {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h3 class="text-center text-danger">Are you sure you want to delete this venue?</h3>
        <div class="row mt-4">
            <!-- Left side: Venue Details -->
            <div class="col-md-8">
                <div class="card p-4">
                    <h4 class="text-center mb-4">Venue Details</h4>
                    <hr />
                    <dl class="row">
                        <!-- Venue Name -->
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <!-- Venue Description -->
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <!-- Venue Location -->
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Location)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Location)
                        </dd>

                        <!-- Venue Capacity -->
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Capacity)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Capacity)
                        </dd>

                        <!-- Venue Status -->
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Status)
                        </dd>

                        <!-- Venue Image URL -->
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.ImageUrl)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.ImageUrl)
                        </dd>
                    </dl>

                    <div class="text-center mt-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="VenueID" />
                            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                        </form>
                        <div class="mt-3">
                            <a asp-action="Venuebook" class="btn btn-secondary btn-sm">Back</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="text-center">
                    <img src="@Model.ImageUrl" alt="Venue Image" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
