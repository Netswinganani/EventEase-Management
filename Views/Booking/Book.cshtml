@model EventEase_Management.Models.BookingModelView

@{
    ViewData["Title"] = "Book Now";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap + FontAwesome -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #fff8f0;
            padding: 40px 20px;
        }

        h2 {
            color: #dc3545;
            text-align: center;
            margin-bottom: 40px;
            font-weight: bold;
        }

        .form-section, .example-section {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }

        .form-control {
            border-radius: 6px;
        }

            .form-control:focus {
                border-color: #28a745;
                box-shadow: 0 0 5px rgba(40, 167, 69, 0.2);
            }

        label i {
            margin-right: 6px;
            color: #fd7e14; /* orange */
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 6px;
        }

            .btn-primary:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-link {
            color: #dc3545;
        }

            .btn-link:hover {
                text-decoration: underline;
            }

        table th {
            background-color: #fd7e14;
            color: white;
        }

        table td, table th {
            vertical-align: middle;
        }

        .example-section h5 {
            color: #28a745;
            font-weight: 600;
        }

     
            flex-direction: column;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <h2><i class="fas fa-calendar-plus"></i> Add New Booking</h2>
        <div class="row">
            <!-- FORM SECTION -->
            <div class="col-md-6 form-section">
                <form asp-action="AddBooking" method="post">
                    <div class="form-group">
                        <label asp-for="CustomerName"><i class="fas fa-user"></i> Customer</label>
                        <input asp-for="CustomerName" class="form-control" placeholder="e.g., John Doe" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EventID"><i class="fas fa-star"></i> Event Name</label>
                        <select asp-for="EventID" class="form-control" asp-items="ViewBag.EventId">
                            <option value="">Select Event</option>
                        </select>
                        <span asp-validation-for="EventID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="VenueId"><i class="fas fa-map-marker-alt"></i> Venue Name</label>
                        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId">
                            <option value="">Select Venue</option>
                        </select>
                        <span asp-validation-for="VenueId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BookingDate"><i class="fas fa-calendar-day"></i> Date</label>
                        <input asp-for="BookingDate" class="form-control" type="date" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status"><i class="fas fa-tasks"></i> Status</label>
                        <select asp-for="Status" class="form-control">
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create Booking" class="btn btn-primary" />
                    </div>
                </form>
            </div>

            <!-- EXAMPLE TABLE SECTION -->
            <div class="col-md-6 example-section">
                <h5 class="text-center mb-4"><i class="fas fa-info-circle"></i> Example Inputs</h5>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Event</th>
                            <th>Venue</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Jane Smith</td>
                            <td>Wedding Gala</td>
                            <td>Grand Hall A</td>
                            <td>2025-06-15</td>
                            <td><span class="badge badge-success">Confirmed</span></td>
                        </tr>
                        <tr>
                            <td>Michael Green</td>
                            <td>Corporate Meetup</td>
                            <td>City Center</td>
                            <td>2025-07-01</td>
                            <td><span class="badge badge-warning text-white">Pending</span></td>
                        </tr>
                        <tr>
                            <td>Lisa Monroe</td>
                            <td>Birthday Bash</td>
                            <td>Sunset Lounge</td>
                            <td>2025-05-20</td>
                            <td><span class="badge badge-danger">Cancelled</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="BookDetails" class="btn btn-link"><i class="fas fa-arrow-left"></i> Back to Booking Details</a>
        </div>
    </div>

   @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
   }
</body>
</html>
