@model EventEase_Management.Entity.Booking


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        h3 {
            color: #dc3545;
            margin-bottom: 20px;
            text-align: center;
        }

        .font-weight-bold {
            font-weight: 600;
        }

        .container {
            max-width: 800px;
            padding: 20px;
        }

        .card {
            background-color: #f9f9f9; 
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn {
            border-radius: 5px;
            padding: 12px 25px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        .text-center {
            text-align: center;
        }

        .img-fluid {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h3 class="text-center text-danger">Are you sure you want to delete this event?</h3>
        <div class="row mt-4">
            <!-- Left side: Event Details -->
            <div class="col-md-8">
                <div class="card p-4">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CustomerName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CustomerName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Eventss)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Eventss.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Venuess)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Venuess.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BookingDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BookingDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>
                    <div class="text-center mt-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="EventBooking" />
                            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                        </form>
                        <div class="mt-3">
                            <a asp-action="BookDetails" class="btn btn-secondary btn-sm">Back</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="text-center">
                    <img src="~/assets/img1.jpeg" alt="Event Image" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>