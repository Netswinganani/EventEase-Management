<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventEase</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-red: #dc3545;
            --hover-red: #bb2d3b;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8fafc;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: var(--primary-red) !important;
        }

            .navbar .navbar-brand {
                font-weight: 600;
            }

            .navbar .nav-link {
                color: white;
                transition: background-color 0.3s, color 0.3s;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

                .navbar .nav-link:hover,
                .navbar .nav-link.active {
                    background-color: var(--hover-red);
                    color: #fff;
                    border-radius: 0.25rem;
                }

        .main-content {
            padding: 2rem;
            margin: 0;
        }

        footer {
            padding: 1rem;
            text-align: center;
            background-color: #f1f1f1;
            color: #333;
        }
    </style>
    @RenderSection("Styles", false)
</head>
<body>

    <!-- Horizontal Navbar with Icons -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Search", "Home")"><i class="fas fa-calendar"></i> Adminbooking </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Dashboard">
                            <i class="bi bi-grid"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Venue" ? "active" : "")" asp-controller="Venue" asp-action="Venuebook">
                            <i class="bi bi-building"></i> Venues
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Event" ? "active" : "")" asp-controller="Event" asp-action="ListEvent">
                            <i class="bi bi-calendar-event"></i> Events
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Booking" ? "active" : "")" asp-controller="Booking" asp-action="BookDetails">
                            <i class="bi bi-book"></i> Bookings
                        </a>
                    </li>
                 
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Optional Footer -->
    <footer>
        &copy; @DateTime.Now.Year - EventEase
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
