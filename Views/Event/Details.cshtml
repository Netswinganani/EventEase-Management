@model EventEase_Management.Entity.Event

@{
    ViewData["Title"] = "Event Details";
}


<div class="event-container">
    <div class="event-header">
        <h2>@Model.Name</h2>
        <div class="event-actions">
            <a asp-action="Edit" asp-route-id="@Model.EventID" class="btn-edit" role="button">   
             <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="ListEvent" class="btn-back" role="button">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>

        </div>
    </div>

    <div class="event-content">
        <div class="event-image">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" onerror="this.src='https://via.placeholder.com/600x400?text=Event+Image'">
            }
            else
            {
                <div class="no-image">
                    <i class="fas fa-image"></i>
                    <span>No image available</span>
                </div>
            }
        </div>

        <div class="event-info">
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Date</span>
                    <span class="info-value">@Model.Date.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Status</span>
                    <span class="info-value status-badge @Model.Status.ToLower()">@Model.Status</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Venue</span>
                    <span class="info-value">@Model.Venue?.Name</span>
                </div>
            </div>

            <div class="info-item">
                <span class="info-label">Image URL</span>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <a href="@Model.ImageUrl" target="_blank" class="info-value url-link">@Model.ImageUrl</a>
                }
                else
                {
                    <span class="info-value">Not specified</span>
                }
            </div>

            <div class="info-item">
                <span class="info-label">Description</span>
                <p class="info-description">@Model.Description</p>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary: #4361ee;
        --primary-light: #e6ecfe;
        --secondary: #3f37c9;
        --success: #4cc9f0;
        --warning: #f8961e;
        --danger: #f72585;
        --light: #f8f9fa;
        --dark: #212529;
        --gray: #6c757d;
        --light-gray: #e9ecef;
        --border-radius: 8px;
    }

    .event-container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .event-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

        .event-header h2 {
            color: var(--dark);
            font-size: 2rem;
            margin: 0;
        }

    .event-actions {
        display: flex;
        gap: 1rem;
    }

    .btn-edit, .btn-back {
        padding: 0.75rem 1.5rem;
        border-radius: var(--border-radius);
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s ease;
    }

    .btn-edit {
        background-color: var(--primary);
        color: white;
    }

        .btn-edit:hover {
            background-color: var(--secondary);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.2);
        }

    .btn-back {
        background-color: white;
        color: var(--gray);
        border: 1px solid var(--light-gray);
    }

        .btn-back:hover {
            background-color: var(--light);
            border-color: var(--gray);
        }

    .event-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        background-color: white;
        border-radius: var(--border-radius);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        padding: 2rem;
    }

    .event-image {
        border-radius: var(--border-radius);
        overflow: hidden;
        height: 100%;
        min-height: 300px;
        background-color: var(--light);
    }

        .event-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: var(--border-radius);
        }

    .no-image {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: var(--gray);
    }

        .no-image i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--light-gray);
        }

    .info-item {
        margin-bottom: 1.5rem;
    }

    .info-label {
        display: block;
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        color: var(--dark);
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .info-description {
        color: var(--dark);
        font-size: 1.1rem;
        line-height: 1.7;
        margin: 0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .status-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

        .status-badge.active {
            background-color: rgba(76, 201, 240, 0.1);
            color: var(--success);
        }

        .status-badge.inactive {
            background-color: rgba(108, 117, 125, 0.1);
            color: var(--gray);
        }

        .status-badge.confirmed {
            background-color: rgba(76, 201, 240, 0.1);
            color: var(--success);
        }

        .status-badge.pending {
            background-color: rgba(248, 150, 30, 0.1);
            color: var(--warning);
        }

        .status-badge.cancelled {
            background-color: rgba(247, 37, 133, 0.1);
            color: var(--danger);
        }

    .url-link {
        color: var(--primary);
        word-break: break-all;
    }

        .url-link:hover {
            text-decoration: underline;
        }

    @@media (max-width: 768px) {
        .event-content {
            grid-template-columns: 1fr;
        }

        .event-actions {
            width: 100%;
            justify-content: flex-end;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
