@model EventEase_Management.Models.EventListModelView 

@{
    ViewData["Title"] = "Events";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --success-color: #4cc9f0;
            --light-bg: #f8f9fa;
            --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            --hover-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }


        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eaeaea;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: var(--secondary-color);
                transform: translateY(-2px);
                box-shadow: var(--hover-shadow);
            }

        .nav-tab- {
            border-bottom: 2px solid #dee2e6;
        }

            .nav-tab- .nav-link {
                color: #495057;
                font-weight: 500;
                border: none;
                padding: 0.75rem 1.5rem;
                margin-right: 0.5rem;
                border-radius: 0.5rem 0.5rem 0 0;
                transition: all 0.2s;
            }

                .nav-tab- .nav-link:hover {
                    color: var(--primary-color);
                    background-color: rgba(67, 97, 238, 0.1);
                }

                .nav-tab- .nav-link.active {
                    color: var(--primary-color);
                    background-color: transparent;
                    border-bottom: 3px solid var(--primary-color);
                    font-weight: 600;
                }

        .event-card {
            background: white;
            border-radius: 0.75rem;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: var(--card-shadow);
            margin-bottom: 1.5rem;
            border: none;
        }

            .event-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--hover-shadow);
            }

        .event-image {
            height: 180px;
            object-fit: cover;
            width: 100%;
        }

        .event-date {
            position: absolute;
            top: 1rem;
            left: 1rem;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
        }

        .badge {
            font-weight: 500;
            padding: 0.35em 0.65em;
            font-size: 0.875em;
            letter-spacing: 0.5px;
        }

        .badge-upcoming {
            background-color: var(--primary-color);
        }

        .badge-past {
            background-color: #6c757d;
        }

        .action-btn {
            width: 2.5rem;
            height: 2.5rem;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin: 0 0.25rem;
            transition: all 0.2s;
        }

            .action-btn:hover {
                transform: scale(1.1);
            }

        .empty-state {
            text-align: center;
            padding: 3rem;
            background: white;
            border-radius: 0.75rem;
            box-shadow: var(--card-shadow);
        }

            .empty-state i {
                font-size: 3rem;
                color: #adb5bd;
                margin-bottom: 1rem;
            }

        .tab-content {
            padding: 1.5rem 0;
        }

        .event-description {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <div class="page-header">
            <h1 class="h3 fw-bold">Events</h1>

            <form method="get" asp-action="ListEvent" class="row g-3 mb-4">
                <div class="col-md-4">
                    <label for="eventTypeId" class="form-label">Event Type</label>
                    <select class="form-select" id="eventTypeId" name="eventTypeId" asp-items="ViewBag.EventTypes">
                        <option value="">-- All Event Types --</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label for="venueStatus" class="form-label">Venue Status</label>
                    <select class="form-select" id="venueStatus" name="venueStatus" asp-items="ViewBag.VenueStatuses">
                        <option value="">-- Any Status --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" value="@Context.Request.Query["startDate"]" />
                </div>

                <div class="col-md-2">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" value="@Context.Request.Query["endDate"]" />
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel me-1"></i> Filter
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-x-circle me-1"></i> Clear
                    </a>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Context.Request.Query["eventTypeId"]) ||
            !string.IsNullOrEmpty(Context.Request.Query["venueStatus"]) ||
            !string.IsNullOrEmpty(Context.Request.Query["startDate"]) ||
            !string.IsNullOrEmpty(Context.Request.Query["endDate"]))
            {
                <div class="alert alert-info">
                    <strong>Active Filters:</strong>
                    <ul class="mb-0">
                        @if (!string.IsNullOrEmpty(Context.Request.Query["eventTypeId"]))
                        {
                            <li>Event Type ID: @Context.Request.Query["eventTypeId"]</li>
                        }
                        @if (!string.IsNullOrEmpty(Context.Request.Query["venueStatus"]))
                        {
                            <li>Venue Status: @Context.Request.Query["venueStatus"]</li>
                        }
                        @if (!string.IsNullOrEmpty(Context.Request.Query["startDate"]))
                        {
                            <li>Start Date: @Context.Request.Query["startDate"]</li>
                        }
                        @if (!string.IsNullOrEmpty(Context.Request.Query["endDate"]))
                        {
                            <li>End Date: @Context.Request.Query["endDate"]</li>
                        }
                    </ul>
                </div>
            }

            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Add New Event
            </a>
        </div>

        <ul class="nav nav-tab-" id="eventTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab">
                    <i class="bi bi-calendar-event me-2"></i>Upcoming
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="past-tab" data-bs-toggle="tab" data-bs-target="#past" type="button" role="tab">
                    <i class="bi bi-clock-history me-2"></i>Past
                </button>
            </li>
        </ul>

        <div class="tab-content" id="eventTabsContent">
            <!-- Upcoming Events -->
            <div class="tab-pane fade show active" id="upcoming" role="tabpanel">
                @if (Model.UpcomingEvents.Any())
                {
                    <div class="row">
                        @foreach (var item in Model.UpcomingEvents)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="event-card">
                                    <div class="position-relative">
                                        <img src="@item.ImageUrl" class="event-image" alt="@item.Name?">
                                        <div class="event-date">
                                            @item.Date.ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                    <div class="p-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="mb-0">@item.Name</h5>
                                            <span class="badge @(item.Status == "confirmed" ? "badge-upcoming" : "bg-warning")">
                                                @item.Status
                                            </span>
                                        </div>
                                        <p class="text-muted mb-2">
                                            <i class="bi bi-geo-alt"></i> @item.Venue?.Name
                                        </p>
                                        <p class="event-description mb-3">@item.Description?</p>
                                        <div class="d-flex justify-content-end">
                                            <a class="action-btn btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.EventID" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a class="action-btn btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.EventID" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a class="action-btn btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.EventID" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-calendar-x"></i>
                        <h4 class="h5">No Upcoming Events</h4>
                        <p class="text-muted">You don't have any upcoming events scheduled yet.</p>
                        <a asp-action="Index" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-lg me-2"></i>Create New Event
                        </a>
                    </div>
                }
            </div>

            <!-- Past Events -->
            <div class="tab-pane fade" id="past" role="tabpanel">
                @if (Model.PastEvents.Any())
                {
                    <div class="row">
                        @foreach (var item in Model.PastEvents)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="event-card">
                                    <div class="position-relative">
                                        <img src="@item.ImageUrl" class="event-image" alt="@item.Name">
                                        <div class="event-date">
                                            @item.Date.ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                    <div class="p-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="mb-0">@item.Name</h5>
                                            <span class="badge badge-past">Completed</span>
                                        </div>
                                        <p class="text-muted mb-2">
                                            <i class="bi bi-geo-alt"></i> @item.Venue?.Name
                                        </p>
                                        <p class="event-description mb-3">@item.Description</p>
                                        <div class="d-flex justify-content-end">
                                            <a class="action-btn btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.EventID" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a class="action-btn btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.EventID" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-archive"></i>
                        <h4 class="h5">No Past Events</h4>
                        <p class="text-muted">There are no past events to display.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
 </html>